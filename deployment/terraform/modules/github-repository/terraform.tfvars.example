# GitHub Authentication
github_token = "your_github_personal_access_token_here"
github_owner = "your_github_username_or_org"

# Repository Configuration
repository_name        = "my-awesome-repo"
repository_description = "A repository created from a template via Terraform"
repository_visibility  = "private"  # Options: public, private, internal
auto_init              = true        # Initialize with README

# Topics/Tags (optional)
topics = ["terraform", "github", "template"]

# Template Repository (optional)
# Defaults to the template: Zeepaardje98/Laravel-React-Dockerized
template_owner      = "Zeepaardje98"
template_repository = "Laravel-React-Dockerized"
