# Copy this file to terraform.tfvars and fill in your values

# GitHub Authentication
github_token = "your_github_personal_access_token_here"
github_organization = "your-github-organization"

# DigitalOcean Authentication
digitalocean_token = "your_digitalocean_api_token_here"

# Project Configuration
project_name = "my-awesome-project"
project_description = "A sample project created with Terraform"
environment = "dev"  # Options: dev, staging, prod

# Repository Configuration
repository_name = "my-awesome-project"
repository_description = "Repository for my awesome project"
repository_visibility = "private"  # Options: public, private, internal

# Server Configuration
server_name = "my-awesome-project-server"
server_size = "s-1vcpu-1gb"  # Options: s-1vcpu-1gb, s-1vcpu-2gb, etc.
server_region = "nyc3"  # Options: nyc1, nyc3, sfo3, etc.
server_image = "ubuntu-22-04-x64"  # Options: ubuntu-22-04-x64, ubuntu-20-04-x64, etc.
